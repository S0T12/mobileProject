<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="@drawable/background_menu">

    <Button
        android:id="@+id/button_teachers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="مربی‌ها"
        android:drawableLeft="@drawable/ic_teachers"
        android:drawablePadding="10dp"/>

    <Button
        android:id="@+id/button_classes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_teachers"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="کلاس‌ها"
        android:drawableLeft="@drawable/ic_classes"
        android:drawablePadding="10dp"/>

    <Button
        android:id="@+id/button_contact_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_classes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="تماس با ما"
        android:drawableLeft="@drawable/ic_contact_us"
        android:drawablePadding="10dp"/>
</RelativeLayout>
